package practice;

public class IfElse {

	public static void main(String[] args) {
		
		int age = 25;
		boolean male = true;
		
		if(age >= 21) {
			System.out.println("The perrson can get a drink");
		}
		else if(male && age >=20) {
			System.out.println("The male  above 20 can get a drink");
			
		}
		else {
			System.out.println("Th eperson can not get a drink");
		}
	}
	

}
